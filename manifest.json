{
  "manifest_version": 2,
  "name": "WX Download Status Bar",
  "version": "1.1",
  "description": "Adds a bar to show the status of your downloads",
  "homepage_url": "https://github.com/jwensley2/DownloadStatusBar",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "downloads",
    "downloads.open"
  ]
}